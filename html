        const projectGrid = document.getElementById('project-grid');
        const modal = document.getElementById('project-modal');
        const modalContent = document.getElementById('modal-content');

        function renderProjects(filter = 'all') {
            projectGrid.innerHTML = '';
            const filteredProjects = filter === 'all' ? projectData : projectData.filter(p => p.type === filter);
            
            filteredProjects.forEach(p => {
                const card = document.createElement('div');
                card.className = `project-card bg-white rounded-lg shadow-sm overflow-hidden cursor-pointer ${p.type}`;
                card.onclick = () => openModal(p.id);
                card.innerHTML = `
                    <img src="${p.imageUrl}" alt="${p.title}" class="w-full h-48 object-cover" onerror="this.onerror=null;this.src='https://placehold.co/600x400/cccccc/ffffff?text=Image+Not+Found';">
                    <div class="p-4">
                        <p class="text-sm accent-color font-medium">${p.category}</p>
                        <h3 class="font-bold text-lg mt-1">${p.title}</h3>
                        <p class="text-sm text-gray-600 mt-2 h-16">${p.summary}</p>
                    </div>
                `;
                projectGrid.appendChild(card);
            });
        }

        function filterProjects(type) {
            renderProjects(type);
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('accent-bg', 'text-white');
                btn.classList.add('bg-white');
            });
            const activeButton = document.querySelector(`.filter-btn[onclick="filterProjects('${type}')"]`);
            activeButton.classList.add('accent-bg', 'text-white');
            activeButton.classList.remove('bg-white');
        }

        function openModal(id) {
            const project = projectData.find(p => p.id === id);
            if (!project) return;

            modalContent.innerHTML = `
                <div class="p-6 md:p-8">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-sm accent-color font-semibold">${project.category}</p>
                            <h2 class="text-2xl md:text-3xl font-bold mt-1">${project.title}</h2>
                            <p class="text-md mt-1 secondary-color">担任角色: ${project.role}</p>
                        </div>
                        <button onclick="closeModal(event)" class="text-gray-400 hover:text-gray-700 text-2xl">&times;</button>
                    </div>
                    <img src="${project.imageUrl}" alt="${project.title}" class="w-full h-64 object-cover rounded-lg my-6" onerror="this.onerror=null;this.src='https://placehold.co/600x400/cccccc/ffffff?text=Image';">
                    <div class="space-y-4 text-gray-700 text-sm md:text-base">
                        <div>
                            <h4 class="font-semibold text-gray-800 border-b pb-1 mb-2">挑战与背景</h4>
                            <p>${project.details.challenge}</p>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-800 border-b pb-1 mb-2">关键行动</h4>
                            <p class="whitespace-pre-line">${project.details.action}</p>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-800 border-b pb-1 mb-2">成果与价值</h4>
                            <p>${project.details.result}</p>
                        </div>
                    </div>
                </div>
            `;
            modal.classList.remove('opacity-0', 'pointer-events-none');
            document.body.style.overflow = 'hidden';
            modalContent.classList.remove('scale-95');
        }

        function closeModal(event) {
            if (event.target.id === 'project-modal' || event.target.tagName === 'BUTTON' || event.target.parentElement.tagName === 'BUTTON') {
                modal.classList.add('opacity-0', 'pointer-events-none');
                document.body.style.overflow = 'auto';
                modalContent.classList.add('scale-95');
            }
        }
        
        document.addEventListener('keydown', (e) => {
            if (e.key === "Escape" && !modal.classList.contains('pointer-events-none')) {
                closeModal({target: {id: 'project-modal'}});
            }
        });

        // Chart.js Radar Chart
        const ctx = document.getElementById('skillsChart').getContext('2d');
        new Chart(ctx, {
            type: 'radar',
            data: {
                labels: ['项目统筹管理', '技术深度与决策', 'BIM应用', '投资与ESG分析', '政策理解与建言', '多专业协同'],
                datasets: [{
                    label: '专业能力雷达',
                    data: [90, 95, 85, 75, 80, 90],
                    backgroundColor: 'rgba(160, 82, 45, 0.2)',
                    borderColor: 'rgba(160, 82, 45, 1)',
                    pointBackgroundColor: 'rgba(160, 82, 45, 1)',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: 'rgba(160, 82, 45, 1)'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    r: {
                        angleLines: {
                            color: 'rgba(0, 0, 0, 0.1)'
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.1)'
                        },
                        pointLabels: {
                            font: {
                                size: 12,
                                family: "'Noto Sans SC', sans-serif"
                            },
                            color: '#3D3D3D'
                        },
                        ticks: {
                            backdropColor: '#F8F7F4',
                            color: '#708090',
                            stepSize: 25
                        },
                         suggestedMin: 0,
                         suggestedMax: 100
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Initial render
        window.onload = () => {
            renderProjects('all');
            const initialButton = document.querySelector('.filter-btn[onclick="filterProjects(\'all\')"]');
            initialButton.classList.add('accent-bg', 'text-white');
            initialButton.classList.remove('bg-white');
        };
    </script>

</body>
